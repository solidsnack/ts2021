{
  "compilerOptions": {
    "jsx": "preserve",
    "listEmittedFiles": true,
    "outDir": "dist/",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es5"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules/",
    "dist/",
    "**/*.spec.ts"
  ]
}
